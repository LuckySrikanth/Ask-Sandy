# Use the base image you are using, e.g., Node.js
FROM node:18

# Install required dependencies for Playwright
RUN apt-get update && apt-get install -y \
    libnss3 \
    libnspr4 \
    libdbus-1-3 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libxkbcommon0 \
    libatspi2.0-0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    && rm -rf /var/lib/apt/lists/*

# Set up your working directory and install dependencies
WORKDIR /usr/src/app
COPY package*.json ./
RUN npm install

# Copy the rest of your application code
COPY . .

# Run Playwright to install browsers
RUN npx playwright install

# Expose your application's port
EXPOSE 5000

# Command to run your application
CMD ["npm", "start"]
